<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="RATextView" parent="@android:style/Widget.TextView" />

    <style name="RATextView.MontserratRegular" parent="MontserratRegular" />

    <style name="RATextView.MontserratLight" parent="MontserratLight" />

    <style name="RATextView.MontserratBold" parent="MontserratBold" />

    <style name="RATextView.MontserratSemiBold" parent="MontserratSemiBold" />

    <style name="RATextView.MontserratLightItalic" parent="MontserratLightItalic" />

    <style name="RATextView.Driver.Header" parent="@style/RATextView.MontserratLight">
        <item name="android:textSize">@dimen/tv_driver_header_text_size</item>
        <item name="android:textColor">@color/driver_sign_up_text_color_primary</item>
    </style>

    <style name="RATextView.Driver.Small" parent="@style/RATextView.MontserratLight">
        <item name="android:textSize">@dimen/tv_driver_small_text_size</item>
        <item name="android:textColor">@color/driver_sign_up_text_color_primary</item>
        <item name="android:lineSpacingExtra">@dimen/tv_driver_small_text_line_spacing_extra</item>
    </style>

    <style name="RATextView.Driver.ViewPricing" parent="@style/RATextView.MontserratBold">
        <item name="android:textColor">@color/blue_400</item>
        <item name="android:textStyle">bold</item>
        <item name="android:lineSpacingExtra">@dimen/tv_driver_small_text_line_spacing_extra</item>
    </style>

    <style name="RATextView.Driver.Setup.Header" parent="@style/RATextView.Driver.Small">
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@color/grey_200</item>
        <item name="android:paddingBottom">@dimen/tv_driver_header_vertical_padding</item>
        <item name="android:paddingLeft">@dimen/tv_driver_header_horizontal_padding</item>
        <item name="android:paddingRight">@dimen/tv_driver_header_horizontal_padding</item>
        <item name="android:paddingTop">@dimen/tv_driver_header_vertical_padding</item>
    </style>

    <style name="RATextView.Driver.Setup.ListItem" parent="@style/RATextView.Driver.Small">
        <item name="android:drawableEnd">@drawable/icn_item_arrow_right_dark_gray</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="RATextView.Driver.BulletedListItem" parent="@style/RATextView.Driver.Small">
        <item name="android:drawableLeft">@drawable/bullet</item>
        <item name="android:drawablePadding">@dimen/tv_bullet_padding</item>
        <item name="android:layout_marginBottom">@dimen/tv_bulleted_list_item_vertical_margin</item>
    </style>

    <style name="RATextView.NeedHelp" parent="@style/RATextView.MontserratLight">
        <item name="android:paddingLeft">@dimen/tv_driver_need_help_horizontal_padding</item>
        <item name="android:paddingRight">@dimen/tv_driver_need_help_horizontal_padding</item>
        <item name="android:drawablePadding">@dimen/basic_widget_margin</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical|right</item>
        <item name="android:minHeight">46dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/driver_need_help_background</item>
        <item name="android:textSize">@dimen/tv_driver_need_help_text_size</item>
        <item name="android:drawableLeft">@drawable/icn_info</item>
    </style>

    <style name="RATextView.Driver.TermsHeader" parent="@style/RATextView.MontserratRegular">
        <item name="android:textSize">@dimen/tv_driver_terms_header_text_size</item>
        <item name="android:textColor">@color/driver_sign_up_text_color_primary</item>
    </style>

    <style name="RATextView.Driver.TermsCheckbox" parent="@style/RATextView.MontserratLight">
        <item name="android:textSize">@dimen/tv_driver_terms_header_text_size</item>
        <item name="android:textColor">#070D17</item>
    </style>

    <style name="RATextView.Profile" parent="RATextView.MontserratRegular">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/bg_text_input_rect</item>
        <item name="android:textColorHint">@color/divider</item>
        <item name="android:textSize">12sp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:textColor">@color/charcoalGrey</item>
    </style>


</resources>